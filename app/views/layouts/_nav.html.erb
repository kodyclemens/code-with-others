<% if logged_in? %>
	<nav class="navbar navbar-expand-lg navbar-dark">
		<%= link_to 'Code With Others', root_path, class: 'navbar-brand' %>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item active">
					<%= link_to 'Home', root_path, class: 'nav-link' %>
				</li>
				<li class="nav-item active">
					<%= link_to 'Teams', teams_path, class: 'nav-link' %>
				</li>
			<% end %>
		</ul>
		<% if logged_in? %>
			<ul class="navbar-nav ml-auto">
				<li class="nav-item active">
					<%= link_to 'Profile', user_path(@user), class: 'nav-link' %>
				</li>
				<% if @user.admin? %>
				<li class="nav-item active">
					<%= link_to 'Users', users_path, class: 'nav-link', id: 'users-link' %>
				</li>
				<% end %>
				<li class="nav-item active">
					<%= link_to 'Logout', logout_path, method: 'DELETE', class: 'nav-link', id: 'logout' %>
				</li>
			</ul>
		</div>
	</nav>
<% end %>
