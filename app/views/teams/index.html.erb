<%= render partial: "layouts/nav", locals: { user: @user } %>
<%= render partial: "layouts/flash_message" %>
<%= render partial: "layouts/object_errors", locals: { object: @user } %>
<div class="container mx-auto">
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Start a New Team</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= render partial: "teams/form", locals: { user: @user, team: @team } %>
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  <h2><a href="#" id="new_team_link">Create a New Team</a></h2>
</div>

<div class="container">
		<div class="row">
			<div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
				<ul class="event-list">
        <% @teams.each do |t| %>
					<li>
						<img alt="Team Image" id="image-<%=t.id%>" src="" />
						<div class="info">
							<h2 class="title" id="title-<%=t.id%>"></h2>
							<p class="desc" id="desc-<%=t.id%>"></p>
							<p class="desc" id="goals-<%=t.id%>"></p>
              <p class="created" id="creator-<%=t.id%>"></p>
						</div>
            <div class="social">
							<ul>
								<li class="github" style="width:33%;"><a href="#github" id="github-<%=t.id%>"><span class="fa fa-github"></span></a></li>
								<li class="slack" style="width:34%;"><a href="#slack" id="slack-<%=t.id%>"><span class="fa fa-slack"></span></a></li>
								<li class="view-team" style="width:33%;"><a href="#team-page" id="team-<%=t.id%>"><span class="fa fa-eye"></span></a></li>
							</ul>
						</div>
					</li>
        <% end %>
				</ul>
			</div>
		</div>
	</div>