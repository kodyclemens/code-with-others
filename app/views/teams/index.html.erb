<%= render partial: "layouts/nav", locals: { user: @user } %>
<%= render partial: "layouts/flash_message" %>
<%= render partial: "layouts/object_errors", locals: { object: @user } %>
<div class="container mx-auto">
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Start a New Team</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= render partial: "teams/form", locals: { user: @user, team: @team } %>
      </div>
    </div>
  </div>
</div>
<div class="text-center">
  <h2><a href="#" id="new_team_link">Create a New Team</a><span class="badge badge-secondary"><i class="fas fa-plus"></i></span></h2>
  </div>
  <div class="row">
    <% @teams.each do |t| %>
      <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
          <img src="#" id="image-<%=t.id%>" class="card-img-top" alt="...">
          <figcaption class="figure-caption text-center" id="creator-<%=t.id%>"></figcaption>
          <div class="card-body">
            <h5 class="card-title" id="title-<%=t.id%>"></h5>
            <p class="card-text" id="desc-<%=t.id%>"></p>
            <p class="card-text" id="goals-<%=t.id%>"></p>
            <p class="card-text" id="slack-<%=t.id%>"></p>
            <p id="button-<%=t.id%>"></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>