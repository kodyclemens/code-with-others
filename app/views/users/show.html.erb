            <div class="container mx-auto">
<div class="text-center">
  <div class="row">
    <% @user.teams.each do |t| %>
      <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
          <img src="<%= t.avatar_url %>" class="card-img-top" alt="...">
          <figcaption class="figure-caption text-center">Created by: <%= link_to creator_name(t.creator_id), user_path(t.creator_id) %> (<%= t.updated_at.strftime('%b %d') %>)</figcaption>
          <div class="card-body">
            <h5 class="card-title"><%= t.name.titleize %></h5>
            <p class="card-text"><strong>Description:</strong> <%= t.description %></p>
            <p class="card-text"><strong>Goals:</strong> <%= t.goals %></p>
            <p class="card-text"><strong>Slack:</strong> <%= t.communication_method %></p>
            <a href="<%= team_path(t) %>" class="btn btn-primary">View Group</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>











<img src="<%= @user.avatar_url %>" alt="User Logo" class="img-fluid" style="max-width: 8%; height: auto;">
<p>Username: <%= @user.username %></p>
<p>Email: <%= @user.email %></p>
<p><%= "Name: #{@user.real_name}" if !@user.real_name.nil? %></p>
<p><%= "Company: #{@user.company}" if !@user.company.nil? %></p>
<p><%= "Bio: #{@user.bio}" if !@user.bio.nil? %></p>
<p><%= link_to 'GitHub Profile', @user.github_profile_url if !@user.bio.nil? %></p>
